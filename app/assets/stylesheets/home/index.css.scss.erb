@import 'mixins';

.fortune{
  display: block;
  height: 100%;
  min-height: 768px;
  min-width: 1024px;
  position: relative;
  top: 50%;
  width: 100%;
  @include one-column{
    width: 320px;
    min-height: 500px;
    min-width: 320px;
    border: 1px solid #f11;
  }
  .cookie{
	  background: url('https://dl.dropboxusercontent.com/u/1682449/fortune_cookie.jpg') no-repeat 0 0;
    background-size: contain;
    height: 559px;
    left: 50%;
    margin: -280px 0 0 -512px;
    position: absolute;
    top: 50%;
    width: 1024px;
    @include one-column{
      margin: 0;
      width: 320px;
      height: 190px;
      left: 0;
      top: 0;
      background-size: cover;
    }
  }

  .copy{
    left: 36%;
    min-width: 350px;
    position: absolute;
    text-align: center;
    top: 40%;
    @include one-column{
      width: 320px;
      left: 0;
      top: 0;
    }
    em{
      font-style: normal;
      color: red;
      position: relative;
      text-transform: uppercase;
      top: -2px;
    }
    .face{
      position: relative;
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 1px solid red;
      border-radius: 12px;
      &:before{
        content: "";
        position: absolute;
        top: 3px;
        left: 50%;
        width: 2px;
        height: 2px;
        margin-left: -3px;
        border-left: 2px solid red;
        border-right: 2px solid red;
      }
      &:after {
        content: "";
        position: absolute;
        top: 7px;
        left: 50%;
        width: 6px;
        height: 3px;
        margin-left: -4px;
        border-bottom: 1px solid red;
        border-left: 1px solid red;
        border-right: 1px solid red;
        border-radius: 0 0 8px 8px;
      }
    }
  }
}