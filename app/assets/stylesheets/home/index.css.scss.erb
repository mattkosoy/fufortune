.fortune{
  display: block;
  height: 100%;
  min-height: 768px;
  min-width: 1024px;
  position: relative;
  top: 50%;
  width: 100%;

  .cookie{
	  background: url('http://mattkosoy.com/fortune_cookie.jpg') no-repeat 0 0;
    background-size: contain;
    height: 768px;
    left: 50%;
    margin: 0 0 0 -512px;
    position: absolute;
    top: 0;
    width: 1024px;
  }

  .copy{
    left: 40%;
    min-width: 350px;
    position: absolute;
    text-align: center;
    top: 34%;
    em{
      font-style: normal;
      color: red;
      position: relative;
      text-transform: uppercase;
      top: -2px;

    }
    .face{
      position: relative;
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 1px solid red;
      border-radius: 12px;
      &:before{
        content: "";
        position: absolute;
        top: 3px;
        left: 50%;
        width: 2px;
        height: 2px;
        margin-left: -3px;
        border-left: 2px solid red;
        border-right: 2px solid red;
      }
      &:after {
        content: "";
        position: absolute;
        top: 7px;
        left: 50%;
        width: 6px;
        height: 3px;
        margin-left: -4px;
        border-bottom: 1px solid red;
        border-left: 1px solid red;
        border-right: 1px solid red;
        border-radius: 0 0 8px 8px;
      }
    }
  }
}